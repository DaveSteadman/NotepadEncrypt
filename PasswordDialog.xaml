<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WpfApp1.PasswordDialog"
        Title="Enter Password" av:DesignHeight="132.725" av:DesignWidth="280.234" Width="250" Height="150"
        Loaded="Window_Loaded">
    <StackPanel Margin="5,5,5,5">
        <TextBlock Text="Enter password:"/>
        <PasswordBox x:Name="PasswordBox" KeyDown="PasswordBox_KeyDown"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
